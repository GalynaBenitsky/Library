@model Library.ViewModel.BookFormNewModel
@{
    ViewBag.Title = Model.Title;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Title</h2>

@using (Html.BeginForm("Save", "Books"))
{
    @Html.ValidationSummary(true, "Please fix the following errors.")
    <div calss="form-group">
        @Html.LabelFor(b => b.Book.Title)
        @Html.TextBoxFor(b => b.Book.Title, new { @class = "form-control" })
        @Html.ValidationMessageFor(b => b.Title)
    </div>
    <div calss="form-group">
        @Html.LabelFor(b => b.Book.Author)
        @Html.TextBoxFor(b => b.Book.Author, new { @class = "form-control" })
        @Html.ValidationMessageFor(b => b.Author)
    </div>
    <div calss="form-group">
        @Html.LabelFor(b => b.Book.Genre)
        @Html.TextBoxFor(b => b.Book.Genre, new { @class = "form-control" })
        @Html.ValidationMessageFor(b => b.Genre)
    </div>
    <div calss="form-group">
        @Html.LabelFor(b => b.Book.ReleaseDate)
        @Html.TextBoxFor(b => b.Book.ReleaseDate, "{0:d MMM yyyy}", new { @class = "form-control" })
        @Html.ValidationMessageFor(b => b.ReleaseDate)
    </div>
    <div calss="form-group">
        @Html.LabelFor(b => b.Book.NumberInStock)
        @Html.TextBoxFor(b => b.Book.NumberInStock, new { @class = "form-control" })
        @Html.ValidationMessageFor(b => b.NumberInStock)
    </div>
    @Html.HiddenFor(b=>b.Book.Id)
    @Html.AntiForgeryToken()
<div>
    <button type="submit" class="btn btn-primary">Save</button>
</div>
}
@section scripts
{
    @Scripts.Render("~/bundles.jqueryval")
    }

