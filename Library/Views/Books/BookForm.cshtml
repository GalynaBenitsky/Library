@model Library.ViewModel.BookFormModel
@{
    ViewBag.Title = Model.Title;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Title</h2>

@using (Html.BeginForm("Save", "Books"))
{
  
    <div calss="form-group">
        @Html.LabelFor(b => b.Title)
        @Html.TextBoxFor(b => b.Title, new { @class = "form-control" })
        @Html.ValidationMessageFor(b => b.Title)
    </div>
    <div calss="form-group">
        @Html.LabelFor(b => b.Author)
        @Html.TextBoxFor(b => b.Author, new { @class = "form-control" })
        @Html.ValidationMessageFor(b => b.Author)
    </div>
    <div calss="form-group">
        @Html.LabelFor(b => b.Genre)
        @Html.TextBoxFor(b => b.Genre, new { @class = "form-control" })
        @Html.ValidationMessageFor(b => b.Genre)
    </div>
    <div calss="form-group">
        @Html.LabelFor(b => b.ReleaseDate)
        @Html.TextBoxFor(b => b.ReleaseDate, "{0:d MMM yyyy}", new { @class = "form-control" })
        @Html.ValidationMessageFor(b => b.ReleaseDate)
    </div>
    <div calss="form-group">
        @Html.LabelFor(b => b.NumberInStock)
        @Html.TextBoxFor(b => b.NumberInStock, new { @class = "form-control" })
        @Html.ValidationMessageFor(b => b.NumberInStock)
    </div>
    @Html.HiddenFor(b => b.Book.Id)
    @Html.HiddenFor(b => b.Id)
    @Html.AntiForgeryToken()
    <div>
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
}

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}
