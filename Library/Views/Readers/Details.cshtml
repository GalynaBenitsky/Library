@model Library.Models.Reader
@{
    ViewBag.Title = Model.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
<ul>
    <li>Membership Type: @Model.MembershipType.Name</li>
    @if (Model.Birth.HasValue)
            {
                <li>Birthdate: @Model.Birth.Value.ToShortDateString()</li>
            }
</ul>

