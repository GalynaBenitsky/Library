@model IEnumerable<Library.Models.Magazine>
@{
    ViewBag.Title = "Magazines";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Magazines</h2>


<table class="table" id="magazines">
    <thead>
        <tr class="table-secondary">
            <th>Magazine Title</th>
            <th>Description</th>
            
        </tr>
    </thead>
    <tbody>
    </tbody>
</table>


@section scripts
{
    <script>
        $(document).ready(function () {
            var table = $("#magazines").DataTable({
                ajax: {
                    url: "/api/magazines",
                    dataSrc: ""
                },
                columns: [
                    {
                        data: "title",       
                    },
                    {
                        data: "desc"
                    },             
                ]
            });
        });
    </script>
}
