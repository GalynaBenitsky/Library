@model IEnumerable<Library.Models.Magazine>
@{
    ViewBag.Title = "Magazines";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Magazines</h2>

<p>
    @Html.ActionLink("New Magazine", "New", "Magazines", null, new { @class = "btn btn-secondary" })
</p>

<table class="table" id="magazines">
    <thead>
        <tr class="table-secondary">
            <th>Magazine Title</th>
            <th>Description</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    </tbody>
</table>


@section scripts
{
    <script>
        $(document).ready(function () {
            var table = $("#magazines").DataTable({
                ajax: {
                    url: "/api/magazines",
                    dataSrc: ""
                },
                columns: [
                    {
                        data: "title",
                        render: function (data, type, magazine) {
                            return "<a href='/magazines/edit/" + magazine.id + "'>" + magazine.title + "</a>";
                        }
                    },
                    {
                        data: "desc"
                    },
                   
                    {
                        data: "id",
                        render: function (data) {
                            return "<button class='btn btn-link js-delete' data-magazine-id=" + data + "><i class='far fa-trash-alt'></i></button>";
                        }
                    }
                ]
            });

            $("#magazines").on("click", ".js-delete", function () {
                var btn = $(this);

                bootbox.confirm({
                    message: "Are you sure you want to delete this magazine?",
                    buttons: {
                        confirm: {
                            label: 'Yes',
                            className: 'btn-success'
                        },
                        cancel: {
                            label: 'No',
                            className: 'btn-danger'
                        }
                    },
                    callback: function (result) {
                        if (result) {
                            $.ajax({
                                url: "/api/magazines/" + btn.attr("data-magazine-id"),
                                method: "DELETE",
                                success: function () {
                                    table.row(btn.parents("tr")).remove().draw();
                                }
                            });
                        }
                    }
                });

            });
        });
    </script>
}
